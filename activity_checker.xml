<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/basic"
>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#66FFFF"
            android:id="@+id/editTextInput" android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Check"
            android:id="@+id/Checker" android:layout_gravity="center_horizontal"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#66FFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textViewShow" android:layout_gravity="center_horizontal" android:textSize="15dp"/>

</LinearLayout>